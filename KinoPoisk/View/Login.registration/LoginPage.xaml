<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KinoPoisk.View.Login.registration.LoginPage"
             BackgroundColor="#121212"
             NavigationPage.HasBackButton="False">

    <NavigationPage.TitleView>
        <StackLayout Orientation="Horizontal" Spacing="10" Padding="5">
            <Label Text="KinoPoisk" FontSize="22" FontAttributes="Bold" VerticalOptions="Center"/>
        </StackLayout>
    </NavigationPage.TitleView>
    
    <ScrollView>
        
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" WidthRequest="350">

        <Label Text="Вход в систему" FontSize="28" HorizontalOptions="Center" FontAttributes="Bold"/>

        <Entry x:Name="LoginEntry" Placeholder="Логин"/>
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>

        <Button Text="Войти" Clicked="Login"/>
        <Button Text="Регистрация" Clicked="Registration"/>
            
        </VerticalStackLayout>
        
    </ScrollView>
    
</ContentPage>