<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KinoPoisk.View.RegistrationPage"
             Title="Регистрация">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <Label Text="Регистрация" FontSize="Large" HorizontalOptions="Center"/>

            <Entry x:Name="LoginEntry" Placeholder="Логин"/>
            <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>

            <StackLayout Orientation="Horizontal" Spacing="10">
                <Label Text="Подписка"/>
                <Switch x:Name="SubscriptionSwitch"/>
            </StackLayout>

            <Button Text="Зарегистрироваться" Clicked="Registration"/>
            <Button Text="Уже есть аккаунт? Вход" Clicked="Login"/>
            
        </StackLayout>
    </ScrollView>

</ContentPage>