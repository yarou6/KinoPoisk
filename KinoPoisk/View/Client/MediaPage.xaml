<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KinoPoisk.View.Client.MediaPage"
             NavigationPage.HasBackButton="False">
    <NavigationPage.TitleView>
        <Grid VerticalOptions="Center">
            <StackLayout Orientation="Horizontal" Spacing="10" Padding="5" VerticalOptions="Center" HorizontalOptions="Start"   >
                <Button Text="KinoPoisk" FontSize="22" TextColor="#FF6600"  BackgroundColor="Transparent" Clicked="Main"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Spacing="15" VerticalOptions="Center"  HorizontalOptions="End" Grid.Column="1">
                <Button Text="Profile" FontSize="22" TextColor="#FF6600"  BackgroundColor="Transparent" Clicked="Profile"/>
            </StackLayout>
        </Grid>
    </NavigationPage.TitleView>

    <ScrollView>

        <Grid Padding="15" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <VerticalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center">
                <Frame HasShadow="True" BorderColor="#FF6600" CornerRadius="12" Padding="0">
                    <Image x:Name="MovieImage" HeightRequest="300" WidthRequest="200" Aspect="AspectFill"/>
                </Frame>
                <Label Text="{Binding RatingText}" FontSize="16" TextColor="#FFCC00" HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1" Spacing="8" Padding="10,0">
                <Label Text="{Binding Name}" FontSize="28" FontAttributes="Bold" TextColor="White" LineBreakMode="WordWrap"/>
                <BoxView HeightRequest="2" Color="#FF6600" WidthRequest="150"/>

                <Label Text="{Binding YearText}" TextColor="White" FontSize="16"/>
                <Label Text="{Binding CountryText}" TextColor="White" FontSize="16"/>
                <Label Text="{Binding AuthorText}" TextColor="White" FontSize="16"/>
                <Label Text="{Binding GenreText}" TextColor="White" FontSize="16"/>
                <Label Text="{Binding AgeText}" TextColor="White" FontSize="16"/>
                <Label Text="{Binding SeriesText}" TextColor="White" FontSize="16"/>
            </VerticalStackLayout>

            <Frame Grid.Row="2" Padding="15" CornerRadius="10" BackgroundColor="#1E1E1E">
                <Label Text="{Binding Description}" TextColor="LightGray" FontSize="14" LineBreakMode="WordWrap"/>
            </Frame>

            <StackLayout Grid.Row="3" Orientation="Vertical" Spacing="10" Padding="0,10">
                <Entry x:Name="FeedbackEntry" Placeholder="Оставьте отзыв" TextColor="White" BackgroundColor="#2E2E2E"/>
                <HorizontalStackLayout Spacing="10">
                    <Button Text="⭐ Оценить" TextColor="White" Clicked="RateMovie"/>
                    <Button Text="❤ Избранное" TextColor="White" Clicked="ToggleFavorite"/>
                    <Button Text="👁 Просмотрено" TextColor="White" Clicked="MarkWatched"/>
                </HorizontalStackLayout>
            </StackLayout>
        </Grid>

    </ScrollView>

</ContentPage>