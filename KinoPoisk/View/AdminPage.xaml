<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KinoPoisk.View.AdminPage"
             Title="Админ">
    
    
    
    <StackLayout x:Name="AdminPanel">
        <Label Text="Админ-панель: пользователи" FontAttributes="Bold"/>
        <ListView x:Name="UsersListView" ItemSelected="Selected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Login}" Detail="{Binding Id}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Удалить выбранного пользователя" Clicked="Delete"/>
    </StackLayout>
    
</ContentPage>