<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KinoPoisk.View.LoginPage"
             Title="Вход">
    
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Вход" FontSize="Large" HorizontalOptions="Center"/>

        <Entry x:Name="LoginEntry" Placeholder="Логин"/>
        <Entry x:Name="PasswordEntry" Placeholder="Пароль" IsPassword="True"/>

        <Button Text="Войти" Clicked="Login"/>
        <Button Text="Нет аккаунта? Регистрация" Clicked="Registration"/>
    </StackLayout>
    
</ContentPage>